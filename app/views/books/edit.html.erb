<% if @book.errors.any? %>
   <p>error</p>
<% end %>

<div class="body">
	<div class="container">
		<div class="row">
			<h2>Editing Book</h2>
			<%=form_for(@book) do |f| %>
			<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
            <% end %>
            <h4>Title</h4>
            <%= f.text_field :title, class: "book_title" %>
            <h4>Opinion</h4>
            <%= f.text_area :body, class: "book_body" %>
            <%= f.submit 'Update Book', class: "btn btn-primary btn-block" %>
			<% end %>
			<%= link_to "show", book_path(@book), class: "book_#{@book.id}"  %>
			<%= link_to "back", books_path, class: "back" %>
		</div>
	</div>
</div>