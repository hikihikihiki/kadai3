<div class="container">
		<div class="row">

　　　　　　<%= render 'users/list', book: @book, user: @user %>
　　　　　　<div class="col-lg-9">
<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
		  <td><%= attachment_image_tag book.user, :profile_image, format: 'jpg',fallback: 'no_image.jpg', size: '100x100' %></td>
		  <td> <%= link_to book.title,book_path(book) %></td>
		  <td> <%= book.body %></td>
		  </tr>
		<%end%>
	</tbody>
</table>
